<div class='text-center'>
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#if comments.length}}
    <div class='col-md-6 comment-list'>
      <h3>Current Comments:</h3>

      {{#each comments as |comment|}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4>{{comment.content}}</h4>
            <small><i></i>Created by {{comment.user.name}} on {{format_date comment.date_created}}</i></small>
          </div>
      
        </div>
      {{/each}}
    </div>
  {{/if}}
  <input type="text" id="comment-content">

    <button value="{{id}}" id="commenter" class='btn btn-primary'>Comment</button>
  </p>
</div>

<script src="/js/comment.js"></script>